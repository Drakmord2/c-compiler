grammar com.poli.compilador.C with org.eclipse.xtext.common.Terminals

generate c "http://www.poli.com/compilador/C"

//--------------------------------------------------------------------

Program: (space+=WS)* (commands+=Command ';')* ;

Command		: Expression ;
			
Expression	: rValue ;

rValue	: LogicExp ;
		
LogicExp		: args+=RelExp (LO args+=RelExp)*;
RelExp		: args+=ArithExp (RO args+=ArithExp)* ;
ArithExp		: args+=Term (AO1 args+=Term)* ;
Term			: args+=Factor (AO2 args+=Factor)* ;

Factor		: UO Atom
	        | Atom
	        ;
	        
Atom			: Literal
			| '(' Expression ')' 
			| lValue ;
lValue      : {IDVal} ID  | PointerExp ;			
UnaryExp		: (UO) LogicExp ;
PointerExp	: ('**') rValue;
AccessExp	: rValue ('[' rValue ']' | '.' ID) ;

Literal		: {IntLit} val=NUM | {TrueLit} 'true' | {FalseLit} 'false' ;

//--------------------------------------------------------------------

terminal LET		: ('a'..'z'|'A'..'Z');
terminal NUM		: INT+ ('.' INT+)? ;
@Override 
terminal ID	: LET (LET | NUM)*;
terminal AO1		: '+' | '-' ;
terminal AO2		: '*' | '/' ;
terminal RO		: '>' | '>=' | '<' | '<=' | '==' | '!=' ;
terminal LO		: '&&' | '||';
terminal UO		: '~' | '++' | '--' | '&' ;
