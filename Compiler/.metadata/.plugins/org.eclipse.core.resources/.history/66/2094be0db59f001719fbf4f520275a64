grammar com.poli.compilador.C with org.eclipse.xtext.common.Terminals

generate c "http://www.poli.com/compilador/C"

//--------------------------------------------------------------------

Program: (commands+=Command ';')* ;

Command		: Expression ;
			
Expression	: rValue ;

rValue	: LogicExp ;
		
LogicExp		: args+=RelExp ( {LogicExp.args+=current} val=LO args+=RelExp)*;
RelExp		: ArithExp ( {RelExp.args+=current} val=RO args+=ArithExp)* ;
ArithExp		: Term ( {AritmExp.args+=current} val=AO1 args+=Term)* ;
Term			: Factor ( {Term.args+=current} val=AO2 args+=Factor)* ;

Factor		: {UnaryExp} UO args+=Atom
	        | Atom
	        ;
	        
Atom			: Literal
			| '(' Expression ')' 
			| lValue ;
lValue      : {IDVal} val=ID  | PointerExp ;			

PointerExp	: '**' ptr=Atom ;
//AccessExp	: rValue ('[' rValue ']' | '.' ID) ;

Literal		: {IntLit} valor=INT | {TrueLit} val=TRUE | {FalseLit} val=FALSE ;

//--------------------------------------------------------------------

//terminal LET		: ('a'..'z'|'A'..'Z');
//terminal NUM		: ('0'..'9')+ ('.' ('0'..'9')+)? ;
terminal TRUE   : 'true';
terminal FALSE  : 'false';
//@Override 
//terminal ID	: ('a'..'z'|'A'..'Z') ('a'..'z'|'A'..'Z'|'0'..'9')*;
terminal AO1		: '+' | '-' ;
terminal AO2		: '*' | '/' ;
terminal RO		: '>' | '>=' | '<' | '<=' | '==' | '!=' ;
terminal LO		: '&&' | '||';
terminal UO		: '~' | '++' | '--' | '&' ;
